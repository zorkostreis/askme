<div class='mb-sm'>
  <%= simple_format h(question.body) %>
</div>

<% if question.answer.present? %>
  <div class='mb-sm text-answer'>
    <%= question.answer %>
  </div>
<% end %>

<div class='text-sm question-footer'>
  <div class='text-grey'>
    <%= l(question.created_at, format: :short) %>
  </div>

  <% if current_user == question.user %>
    <div>
      <% edit_icon = question.answer.present? ? 'pencil' : 'reply' %>
      <%= button_to fa_icon('eye-slash'), hide_question_path(question), method: :put,
        title: 'Скрыть вопрос', class: 'mr-sm' unless question.hidden? %>
      <%= link_to fa_icon(edit_icon), edit_question_path(question), title: 'Изменить вопрос', class: 'mr-sm' %>
      <%= button_to fa_icon('trash-o'), question_path(question), form: {data: {turbo_confirm: 'Точно удалить вопрос?'}},
        method: :delete, title: 'Удалить вопрос' %>
    </div>
  <% end %>
</div>
